<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/main.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request</title>
</head>
<body class="flex">
    <div class="header flex">
        
       <img src="https://ubisoft-avatars.akamaized.net/a3c1a636-db47-4751-941b-1acc538932de/default_256_256.png" alt="">
       
       <h2>
           <% if (idUser === null){ %>
            <a href="/login">Log in</a>
           <% }else{ %>

              <%= idUser.name %>

           <% } %>
           
        </h2>

       <h1>Request</h1>
    </div>
    
    <div class="section flex">

    <div class="category flex"><h2>Category</h2>
    <button>Programming</button>
    <button>Desgin</button>
    <button>Tanslation</button>
    <button>Markting</button>
    </div>

    <div class="contanier flex">

   
        <% if ((parseInt(idUser.type)) === 0){ %>
            <div class="nav flex">
                <form action="/new_ticket">
                    <input type="submit" value="New Post" />
                </form>
                
                <form action="/signup">
                    <input type="submit" value="Go to Google" />
                </form>
                   <% } %>
        
             
        
        </div>
        <div class="tickets-container">

 
              <% data.forEach((element) => { %>
                  
             
            <div class="ticket">
                <div>
                <a href="/show_ticket/<%= element._id%>/"><h1><%=element.subject%></h1></a>
                <p><%=element.description%></p>
                <p><%=element.user.name%></p>
                
               
                <img src="" alt="">
            </div>

            </div>
            <% }); %>


        </div>
    </div>
     
    </div>

    <div class="footer flex"><h3>Footer</h3></div>
</body>
</html>